@inherits LayoutComponentBase

<FluentLayout>
    <FluentHeader Style="height:7rem;">
        <FluentGrid Justify="JustifyContent.SpaceBetween" Style="width:100%">
            <FluentGridItem>
                <a class="logo" href="/">
                    <img src="img/logo.svg" alt="logo" width="60%" />
                </a>
            </FluentGridItem>

            <FluentGridItem Style="margin-top:20px;">
                <AuthorizeView>
                    <Authorized>
                        <CartViewer />
                    </Authorized>
                </AuthorizeView>
            </FluentGridItem>
        </FluentGrid>
    </FluentHeader>
    <FluentStack Class="main" Orientation="Orientation.Horizontal" Width="100%" Style="height:calc(87dvh - 30px);">
        <NavMenu />
        <FluentBodyContent>
            <div class="content">
                <FluentToastProvider MaxToastCount="5"
                                     Position="ToastPosition.TopRight"
                                     Timeout="TimeSpan.FromSeconds(2).Milliseconds"
                                     RemoveToastsOnNavigation="false" />

                <FluentDialogProvider />
                <FluentTooltipProvider />
                <FluentMessageBarProvider Section="TOP_MESSAGE_SECTION" MaxMessageCount="5" />

                @Body

            </div>
        </FluentBodyContent>
    </FluentStack>
    <FluentFooter Style="display:flex">
        Tasty Eats Bangladesh © @(DateTime.UtcNow.Year). All rights reserved.
    </FluentFooter>
</FluentLayout>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>